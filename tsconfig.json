{
	"compilerOptions": {
		"downlevelIteration": true,
		"forceConsistentCasingInFileNames": true,
		"noImplicitAny": true,
		"removeComments": false,
		"preserveConstEnums": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true,
		"declaration": true,
		"outDir": "lib/",
		"sourceMap": true,
		"importHelpers": true,
		"target": "ES5"
	},
	"include": [
		"src/**/*.ts"
	],
	"exclude": [
		"node_modules",
		"**/*.spec.ts"
	]
}
